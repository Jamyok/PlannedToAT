@model PlannedToAT.Models.AdminInputFormModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
        <style>
        .dashboard-container {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .header {
            display: flex;
            justify-content: space-between;
            width: 100%;
            padding: 10px;
        }
        .nav {
            display: flex;
            gap: 15px;
        }
        .metrics {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 20px;
            width: 100%;
            margin-top: 20px;
        }
        .box {
            border: 1px solid #ddd;
            padding: 20px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <div class="header">
            <div class="logo">Logo</div>
            <nav class="nav">
                <a href="#">Dashboard</a>
                <a href="#">Users</a>
                <a href="#">Reports</a>
                <a href="#">Settings</a>
            </nav>
            <form asp-controller="AdminInput" asp-action="Logout" method="post" style="display:inline;">
                <button type="submit" class="logout-button">Logout</button>
            </form>
        </div>

        <div class="welcome-message">
            Welcome, @Model.FirstName!
        </div>
         <div class="metrics">
            <div class="box">Total Users</div>
            <div class="box">Graph 1</div>
            <div class="box">Graph 2</div>
            <div class="box">Graph 3</div>
        </div>
        </div>
    </div>
</body>
</html>
