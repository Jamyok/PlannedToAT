@{
    ViewData["Title"] = "Sign Up";
}

<div class="container text-center" style="margin-top: 50px;">
    <h1>@ViewData["Title"]</h1>
    <p>Please select what kind of user you are.</p>

    <!-- Buttons for Admin and Student Sign Up -->
    <div style="margin-top: 20px;">
        <a asp-controller="AdminInput" asp-action="Admin" class="btn btn-primary" style="margin-right: 20px; padding: 10px 20px;">
            Admin Sign Up
        </a>

        <a asp-controller="Home" asp-action="SignUpStudent" class="btn btn-secondary" style="padding: 10px 20px;">
            Student Sign Up
        </a>
    </div>
</div>
