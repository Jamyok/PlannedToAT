@model PlannedToAT.Models.AdminModels.AdminInputFormModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f7fa;
            color: #333;
        }
        .dashboard-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
        }
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
            padding: 15px 30px;
            background-color: #2d3e50;
            color: white;
        }
        .logo {
            font-size: 24px;
            font-weight: bold;
        }
        .nav {
            display: flex;
            gap: 20px;
        }
        .nav a {
            color: #fff;
            text-decoration: none;
            font-size: 16px;
            padding: 8px 16px;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }
        .nav a:hover {
            background-color: #1f2d3d;
        }
        .welcome-message {
            font-size: 20px;
            color: #2d3e50;
            margin-top: 20px;
        }
        .metrics {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 30px;
            width: 100%;
            max-width: 1200px;
            margin-top: 40px;
        }
        .box {
            background-color: #fff;
            border: 1px solid #ddd;
            padding: 25px;
            border-radius: 8px;
            text-align: center;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        .box h3 {
            font-size: 22px;
            margin-bottom: 15px;
            color: #2d3e50;
        }
        .box p {
            font-size: 18px;
            color: #555;
        }
        .box img {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
        }
        .logout-button {
            background-color: #e74c3c;
            color: white;
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }
        .logout-button:hover {
            background-color: #c0392b;
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <!-- Header Section -->
        <div class="header">
            <div class="logo">Admin Dashboard</div>
            <nav class="nav">
                <a href="@Url.Action("Index", "Admin")">Dashboard</a>
                <a href="@Url.Action("Users", "Admin")">Users</a>
                <a href="@Url.Action("AdminReports", "Home")">Reports</a>
                <a href="@Url.Action("Settings", "Admin")">Settings</a>
            </nav>
            <form asp-controller="AdminInput" asp-action="Logout" method="post" style="display:inline;">
                <button type="submit" class="logout-button">Logout</button>
            </form>
        </div>
        <!-- Welcome Message -->
        <div class="welcome-message">
            Welcome, @Model.FirstName!
        </div>
            <div class="metrics">
        <div class="box">
            <div id="usersChart1" style="width:100%; height:400px;"></div>
        </div>
        <div class="box">
            <div id="usersChart2" style="width:100%; height:400px;"></div>
        </div>
        <div class="box">
            <div id="usersChart3" style="width:100%; height:400px;"></div>
        </div>
    </div>
    <script>
    document.addEventListener("DOMContentLoaded", function () {
        //chart1
        Highcharts.chart('usersChart1', {
            chart: { type: 'column' },
            title: { text: 'User Growth Per Year' },
            xAxis: { 
                categories: ['2020', '2021', '2022', '2023', '2024', '2025'],
                title: { text: 'Year' }
            },
            yAxis: { title: { text: 'Total Users' } },
            series: [{ 
                name: 'Users', 
                data: [10, 50, 150, 300, 500, 750] // Dummy data
            }]
        });
        //chart2
        Highcharts.chart('usersChart2', {
            chart: { type: 'line' },
            title: { text: 'New Users Per Month' },
            xAxis: { 
                categories: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                title: { text: 'Month' }
            },
            yAxis: { title: { text: 'New Users' } },
            series: [{ 
                name: 'New Users', 
                data: [0, 5, 10, 15, 20, 25] // Dummy data
            }]
        });
        //chart3
        Highcharts.chart('usersChart3', {
            chart: { type: 'pie'},
            title: { text: 'Form Status'},
            series: [{
                name:'Forms',
                colorByPoint: true,
                data: [
                    {name: 'Completed', y: 60, color: '#2ecc71'},
                    {name: 'In Progress', y:25, color:'#f1c40f'},
                    {name: 'Not Started', y: 15, color:'#e74c3c'}
                ]
            }]
        })
    });
    </script>       
</div>
</body>
</html>