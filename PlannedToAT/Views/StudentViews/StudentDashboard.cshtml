@model PlannedToAT.ViewModels.StudentDashboardViewModel
@using System.Text.Json

@{
    ViewData["Title"] = "Student Dashboard";
    Layout = "_StudentDashboardLayout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f7fa;
            color: #333;
        }
        .dashboard-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
        }
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
            padding: 15px 30px;
            background-color: #2d3e50;
            color: white;
        }
        .logo {
            font-size: 24px;
            font-weight: bold;
        }
        .nav {
            display: flex;
            gap: 20px;
        }
        .nav a {
            color: #fff;
            text-decoration: none;
            font-size: 16px;
            padding: 8px 16px;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }
        .nav a:hover {
            background-color: #1f2d3d;
        }
        .welcome-message {
            font-size: 20px;
            color: #2d3e50;
            margin-top: 20px;
        }
        .metrics {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 30px;
            width: 100%;
            max-width: 1200px;
            margin-top: 40px;
        }
        .box {
            background-color: #fff;
            border: 1px solid #ddd;
            padding: 25px;
            border-radius: 8px;
            text-align: center;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        .box h3 {
            font-size: 22px;
            margin-bottom: 15px;
            color: #2d3e50;
        }
        .box p {
            font-size: 18px;
            color: #555;
        }
        .logout-button {
            background-color: #a7a5a5;
            color: white;
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }
        .logout-button:hover {
            background-color: #c9c9c8;
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <div class="welcome-message">
            <h2>Welcome @Model.StudentName</h2>
        </div>

        <!-- Graphs Section -->
        <div class="metrics">
            <div class="box">
                <div id="savingsChart" style="width:100%; height:400px;"></div>
            </div>
            <div class="box">
                <div id="upcomingsChart" style="width:100%; height:400px;"></div>
            </div>
            <div class="box">
                <div id="progressChart" style="width:100%; height:400px;"></div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Bar Chart - Total Savings
            Highcharts.chart('savingsChart', {
                chart: { type: 'bar' },
                title: { text: 'Total Savings' },
                xAxis: {
                    categories: @Html.Raw(JsonSerializer.Serialize(Model.SavingsMonths)),
                    title: { text: 'Month' }
                },
                yAxis: {
                    title: { text: 'Savings ($)' }
                },
                series: [{
                    name: 'Savings',
                    data: @Html.Raw(JsonSerializer.Serialize(Model.MonthlySavings))
                }]
            });

            // Column Chart - Upcoming Deadlines
            Highcharts.chart('upcomingsChart', {
                chart: { type: 'column' },
                title: { text: 'Upcoming Forms & Deadlines' },
                xAxis: {
                    categories: @Html.Raw(JsonSerializer.Serialize(Model.FormDueDates)),
                    title: { text: 'Deadlines' }
                },
                yAxis: {
                    title: { text: 'Forms Due' }
                },
                series: [{
                    name: 'Forms Due',
                    data: @Html.Raw(JsonSerializer.Serialize(Model.FormsDue))
                }]
            });

            // Pie Chart - Form Completion Status
            Highcharts.chart('progressChart', {
                chart: { type: 'pie' },
                title: { text: 'Current Form Completion Status' },
                series: [{
                    name: 'Forms',
                    colorByPoint: true,
                    data: [
                        { name: 'Completed', y: @Model.CompletedCount, color: '#2ecc71' },
                        { name: 'In Progress', y: @Model.InProgressCount, color: '#f1c40f' },
                        { name: 'Not Started', y: @Model.NotStartedCount, color: '#e74c3c' }
                    ]
                }]
            });
        });
    </script>
</body>
</html>
