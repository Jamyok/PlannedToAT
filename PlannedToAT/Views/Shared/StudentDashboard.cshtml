@model PlannedToAT.Models.StudentModels.SignUpStudent

@{
    ViewData["Title"] = "Student Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f0f2f5;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .dashboard-container {
            width: 90%;
            max-width: 1200px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        /* Header Section */
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 2px solid #ddd;
            padding-bottom: 10px;
            margin-bottom: 20px;
            background-color: #2e3b4e; /* Light dark blue for a calm theme */
            color: white;
        }

        .logo {
            font-size: 24px;
            font-weight: bold;
            color: #3498db; /* A brighter blue for logo */
        }

        .nav {
            display: flex;
            gap: 20px;
        }

        .nav a {
            text-decoration: none;
            color: white;
            font-weight: bold;
        }

        .nav a:hover {
            background-color: #1f2d3d;
            padding: 8px 16px;
        }

        /* Welcome message */
        .welcome-message {
            font-size: 24px;
            color: #34495e;
            margin-bottom: 20px;
        }

        /* Statistics (Graph boxes) */
        .statistics {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 30px;
            margin-top: 30px;
        }

        .graph-box {
            background-color: #f8f9fa; /* A light background for graphs */
            border-radius: 8px;
            padding: 20px;
            text-align: center;
            font-size: 18px;
            font-weight: bold;
            color: #2c3e50;
            border: 1px solid #ddd;
        }

        .graph-box img {
            width: 100%;
            height: auto;
            border-radius: 8px;
            margin-bottom: 10px;
        }

        .logout-button {
            background-color: #e74c3c;
            color: white;
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

        .logout-button:hover {
            background-color: #c0392b;
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <!-- Header Section -->
        <div class="header">
            <div class="logo">Logo</div>
            <div class="nav">
                <a href="#">Dashboard</a>
                <a href="#">Forms</a>
                <a href="#">Profile</a>
            </div>
        </div>

        <!-- Welcome Message -->
        <div class="welcome-message">
            Welcome, @Model.StudentName!
        </div>

        <!-- Graphs Section -->
        <div class="statistics">
            <!-- Graph 1 -->
            <div class="graph-box">
                <h3>Savings</h3>
                <img src="https://www.google.com/url?sa=i&url=https%3A%2F%2Fdatavizproject.com%2Fdata-type%2Fline-chart%2F&psig=AOvVaw2NvKt3kmHXZZ8RuopO1xdE&ust=1733626962610000&source=images&cd=vfe&opi=89978449&ved=0CBQQjRxqFwoTCPDkve3VlIoDFQAAAAAdAAAAABAY" alt="Graph 1">
                <p>Track your savings!</p>
            
            </div>
            <!-- Graph 2 -->
            <div class="graph-box">
                <h3>Upcoming Forms</h3>
                <img src="https://via.placeholder.com/500x250/2ecc71/ffffff?text=Upcoming+Assignments" alt="Graph 2">
                <p>Your upcoming forms and deadlines</p>
            </div>  
            <div class="graph-box">
                <h3>Progress</h3>
                 <img src="https://www.google.com/url?sa=i&url=https%3A%2F%2Fdatavizproject.com%2Fdata-type%2Fline-chart%2F&psig=AOvVaw2NvKt3kmHXZZ8RuopO1xdE&ust=1733626962610000&source=images&cd=vfe&opi=89978449&ved=0CBQQjRxqFwoTCPDkve3VlIoDFQAAAAAdAAAAABAY" alt="Graph 1">
            </div>    
        </div>
    </div>
</body>
</html>